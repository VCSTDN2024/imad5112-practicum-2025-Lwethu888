<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="35dp"
    tools:context=".Playlist">



    <Button
        android:id="@+id/buttonDisplayalistofsongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Displays a list of songs "
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/buttonAverageratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average ratings"
        android:layout_marginStart="8dp" />


    <Button
        android:id="@+id/buttonReturntomainscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to main"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
    android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"/>
</LinearLayout>